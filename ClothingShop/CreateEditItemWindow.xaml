<Window x:Class="ClothingShop.CreateEditItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClothingShop"
        mc:Ignorable="d"
        Title="CreateEditItemWindow" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0">Item Name:</TextBlock>
        <TextBox x:Name="ItemNameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,40,0,0" Width="240"/>

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,80,0,0">Price:</TextBlock>
        <TextBox x:Name="ItemPriceTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,100,0,0" Width="240"/>

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,140,0,0">Description:</TextBlock>
        <TextBox x:Name="ItemDescriptionTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,160,0,0" Width="240" Height="60"/>

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,220,0,0">Category:</TextBlock>
        <ComboBox x:Name="CategoryComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,240,0,0" Width="240">
            <ComboBoxItem Content="Skirts"/>
            <ComboBoxItem Content="Tops"/>
            <ComboBoxItem Content="Outerwears"/>
            <ComboBoxItem Content="Shoes"/>
            <ComboBoxItem Content="Dresses"/>
        </ComboBox>

        <TextBlock Text="Image URL:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,277,0,0"/>
        <TextBox x:Name="ImageUrlTextBox" VerticalAlignment="Top" Margin="20,298,540,0" Height="25"/>

        <Button Content="Save" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Height="30" Margin="20,0,0,20" Click="SaveButton_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Height="30" Margin="0,0,20,20" Click="CancelButton_Click"/>
    </Grid>
</Window>
