<Window x:Class="ClothingShop.ItemDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClothingShop"
        mc:Ignorable="d"
        Title="ItemDetailsWindow" Height="450" Width="800">
    <Grid>

        <Image x:Name="ItemImage" Width="150" Height="150" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>
        <TextBlock x:Name="ItemNameText" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,180,0,0" />
        <TextBlock x:Name="ItemPriceText" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,220,0,0" Foreground="#FF1A289E" />
        <TextBlock x:Name="ItemDescriptionText" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20,250,20,0" FontSize="16" />

        <Button Content="Purchase" HorizontalAlignment="Center" VerticalAlignment="Top" Width="196" Height="58" Margin="0,349,0,0" Click="PurchaseButton_Click" FontSize="20" Background="#FFF7FFC8"/>

    </Grid>
</Window>
